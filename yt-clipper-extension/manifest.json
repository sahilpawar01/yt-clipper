{
    "manifest_version": 3,
    "name": "YouTube Video Clipper",
    "version": "1.0",
    "description": "Clip and download segments from YouTube videos.",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }